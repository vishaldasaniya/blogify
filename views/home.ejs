<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <% locals.blogs.forEach(blog=>{ %>

      <div class="card" style="width: 18rem">
        <img src="<%= blog.blogImageURL %>" class="card-img-top" alt="blogimage" />
        <div class="card-body">
          <h5 class="card-title"><%= blog.blogtitle %></h5>
          <p class="card-text">
            <%= blog.blogbody %>
          </p>
          <a href="blog/<%=blog._id%>" class="btn btn-primary">View</a>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
