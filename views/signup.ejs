<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Signup Page</title>
    <style>
      .login-container {
        background: transparent;
        min-width: 300px;
        border-radius: 10px;
      }

      /* Underline-only input styles */
      .login-container input.form-control {
        border: none;
        border-bottom: 2px solid #000;
        border-radius: 0;
        background: transparent;
        padding-left: 0;
        padding-right: 0;
        box-shadow: none;
      }

      .login-container input.form-control:focus {
        border-bottom-color: #0d6efd;
        background: transparent;
        box-shadow: none;
      }
    </style>
  </head>
  <body style="background-color: #dfdccf">
    <%- include('./partials/nav') %>
    <div
      class="d-flex justify-content-center align-items-center"
      style="min-height: calc(100vh - 150px)"
    >
      <div class="login-container p-4 rounded text-center">
        <div class="row mb-4">
          <h3 class="fw-bold">Login to Your Account</h3>
        </div>
        <form action="/user/signup" method="post">
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="fullName"
              placeholder="fullName"
            />
          </div>
          <div class="mb-3">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              class="form-control"
              placeholder="Password"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
      </div>
    </div>
    <%- include('./partials/footer') %> <%- include('./partials/script') %>
  </body>
</html>
